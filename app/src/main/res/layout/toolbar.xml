<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/toolbar_view"
        android:layout_alignParentStart="true"
        android:layout_gravity="top"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageButton
            android:id="@+id/toolbar_logo_button"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF"
            android:contentDescription="@string/toolbar_logo_button"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:src="@drawable/insightflow_logo_nobg" />

        <EditText
            android:id="@+id/toolbar_search_bar"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/toolbar_logo_button"
            android:autofillHints=""
            android:hint="Search..."
            android:inputType="text"
            android:maxLines="1"
            android:padding="6dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/toolbar_search_button"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginStart="1dp"
            android:layout_toEndOf="@+id/toolbar_search_bar"
            android:background="#FFFFFF"
            android:contentDescription="@string/toolbar_search_button"
            android:scaleType="fitCenter"
            android:src="@drawable/toolbar_search_button" />

        <ImageButton
            android:id="@+id/toolbar_dropdown_button"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="1dp"
            android:background="#FFFFFF"
            android:contentDescription="@string/toolbar_dropdown_button"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            android:src="@drawable/toolbar_dropdown_button" />

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>
